<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="knou.cbt.domain.subject.mapper.SubjectMapper">

    <sql id="SubjectFilter">
        <if test="keyword != null and keyword != ''">
            AND s.subject_name LIKE CONCAT('%', #{keyword}, '%')
        </if>
        <if test="useYn != null and useYn != ''">
            AND s.use_yn = #{useYn}
        </if>
    </sql>

    <sql id="BaseSelectColumns">
        SELECT
            s.id,
            s.subject_name,
            s.subject_category,
            s.department_id,
            d.department_name,
            s.grade,
            s.use_yn,
            s.created_at,
            s.updated_at
        FROM subject s
                 JOIN department d ON s.department_id = d.id
    </sql>

    <resultMap id="SubjectResultMap" type="knou.cbt.domain.subject.dto.SubjectDto">
        <id property="id" column="id"/>
        <result property="subjectName" column="subject_name"/>
        <result property="subjectCategory" column="subject_category"/>
        <result property="departmentId" column="department_id"/>
        <result property="departmentName" column="department_name"/>
        <result property="useYn" column="use_yn"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAll" resultMap="SubjectResultMap">
        <include refid="BaseSelectColumns"/>
        <where>
            s.use_yn = 'Y'
        </where>
        ORDER BY s.subject_name
    </select>

    <select id="findAllWithDepartment" resultMap="SubjectResultMap">
        <include refid="BaseSelectColumns"/>
        <where>
            <include refid="SubjectFilter"/>
        </where>
        ORDER BY s.id
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="countAll" resultType="int">
        SELECT COUNT(*)
        FROM subject s
        <where>
            <include refid="SubjectFilter"/>
        </where>
    </select>

    <select id="findByIdWithDepartment" parameterType="long" resultMap="SubjectResultMap">
        <include refid="BaseSelectColumns"/>
        <where>
            s.id = #{id}
        </where>
    </select>

    <select id="findByNameWithDepartment" parameterType="string" resultMap="SubjectResultMap">
        <include refid="BaseSelectColumns"/>
        <where>
            s.subject_name = #{name}
        </where>
        LIMIT 1
    </select>

    <select id="findByDepartmentId" resultType="knou.cbt.domain.subject.dto.SubjectDto">
        SELECT s.id, s.subject_name, s.subject_category, s.department_id, s.use_yn
        FROM subject s
        <where>
            s.department_id = #{deptId}
            AND s.use_yn = 'Y'
        </where>
        ORDER BY s.subject_name
    </select>

    <insert id="insert" parameterType="knou.cbt.domain.subject.model.Subject">
        INSERT INTO subject (subject_name, subject_category, grade, department_id, use_yn)
        VALUES (
                   #{subjectName},
                   #{subjectCategory},
                   #{grade},
                   #{departmentId},
                   COALESCE(#{useYn}, 'Y')
               )
    </insert>

    <update id="update" parameterType="knou.cbt.domain.subject.model.Subject">
        UPDATE subject
        SET subject_name     = #{subjectName},
            subject_category = #{subjectCategory},
            department_id    = #{departmentId}
        <if test="useYn != null">
            , use_yn = #{useYn}
        </if>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM subject WHERE id = #{id}
    </delete>

    <select id="existsByDepartmentId" resultType="boolean" parameterType="long">
        SELECT CASE WHEN COUNT(*) > 0 THEN TRUE ELSE FALSE END
        FROM subject
        <where>
            department_id = #{deptId}
        </where>
    </select>

</mapper>