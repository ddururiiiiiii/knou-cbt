<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="knou.cbt.domain.user.mapper.UserMapper">

    <select id="findByEmail" parameterType="string" resultType="knou.cbt.domain.user.model.User">
        SELECT *
        FROM users
        WHERE email = #{email}
    </select>

</mapper>
